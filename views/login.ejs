}
  a
  {
  margin-top:0%;
  margin-bottom:2%;
  }
  .word
  {
    color:white;
  font-size:17px;
  }
#lg
{
  margin-bottom:2%;
  padding-bottom:2%;
}
#container{
  display:flex;
}
.background{
  width:430px;
  height:520px;
  position:absolute;
  transform:translate(-50%,-50%);
  left:50%;
  top:50%;
}
.background .shape{
  height: 200px;
  width: 200px;
  position: absolute;
  border-radius: 50%;
}
.shape:first-child{
  background: linear-gradient(
    #1845ad,
    #23a2f6
  );
  left:-160px;
  top:-120px;
}
.shape:last-child{
  background: linear-gradient(
    to right,
    #ff512f,
    #f09819
  );
  right:-80px;
  bottom:-125px;
}
form *{
  letter-spacing: .7px;
}
form{
  height:480px;
  width: 400px;
  background-color: rgba(255, 255, 255, 0.13);
  position: absolute;
  transform: translate(120%,20%);
  top:50%;
  left:50%;
  border-radius: 2%;
  backdrop-filter: blur(0px);
  border:2px solid rgba(255,255,255,.1);
  box-shadow:0 0 40px rgba(8,7,16,.6);
  padding:50px 35px 35px;
