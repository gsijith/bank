<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style type="text/css">
body
{
font-family: 'Poppins',sans-serif;
background:black;
}
h1{
  text-align:center;
  color:white;
}
#acc
{
color:blue;
}
#tb
{
position:absolute;
justify-content: center;
}
input
{
display:block;
height: 50px;
width: 100%;
