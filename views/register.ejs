<input type="text" placeholder="Pincode" id="number" pattern="[0-9]{6}" name="pcode" required>
<input type="address" placeholder="Address" name="addr" required><br><br><br><br>
<label>Choose Account Type:</label>
<select name="type">
  <option>Savings</option>
  <option>Current</option>
</select>
<input type="text" placeholder="Create Username" name="uname" required>
<input type="password" placeholder="PASSWORD  •••••••" required id="pass1" maxlength="8" name="pass" ><br>
<input type="password" placeholder="CONFIRM PASSWORD  •••••••" oninput="check()" required id="pass2" maxlength="8"><br>



<script>
  const passwordInput = document.getElementById('pass1');
  const confirmPasswordInput = document.getElementById('pass2');

  function validatePassword() {
    if (passwordInput.value !== confirmPasswordInput.value) {
      confirmPasswordInput.setCustomValidity("Passwords do not match");
    } else {
      confirmPasswordInput.setCustomValidity("");
    }
  }

  passwordInput.addEventListener('change', validatePassword);
  confirmPasswordInput.addEventListener('keyup', validatePassword);
</script>



<input type="submit" value="REGISTER" id="submit">



